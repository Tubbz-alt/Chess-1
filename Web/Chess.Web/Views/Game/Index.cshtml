@{
    this.ViewData["Title"] = "Game Room";
}

<environment names="Development">
    <script type="text/javascript" src="~/lib/microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/lib/chessboard-js/chessboard-1.0.0.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script type="text/javascript" src="~/lib/microsoft/signalr/dist/browser/signalr.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/lib/chessboard-js/chessboard-1.0.0.min.js" asp-append-version="true"></script>
</environment>

<main class="main container-fluid text-center">
    <div class="main-playground row">
        <div class="main-playground-white player-stats column left">
            <h1 class="main-playground-white-name player-name"><i class="far fa-user fa-sm"></i> </h1>
            <div class="main-playground-white-points player-points"><span class="white-points-value player-points-value">0</span> pts</div>
            <div class="main-playground-white-taken-pieces taken-pieces-container">
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/bP.png" alt="Pawn: " />
                    <span class="taken-pieces-black-pawn-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/bN.png" alt="Knight: " />
                    <span class="taken-pieces-black-knight-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/bB.png" alt="Bishop: " />
                    <span class="taken-pieces-black-bishop-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/bR.png" alt="Rook: " />
                    <span class="taken-pieces-black-rook-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/bQ.png" alt="Queen: " />
                    <span class="taken-pieces-black-queen-value">0</span>
                </div>
            </div>
            <div>
                <ul class="main-playground-white-move-history player-move-history list-group"></ul>
            </div>
        </div>

        <div class="main-playground-board-field column middle">
            <h6 class="main-playground-board-field-status-bar"><i class="fas fa-arrow-alt-circle-right"></i> <span class="status-bar-text"></span><span class="status-bar-check-notification"></span> </h6>
            <div id="board"></div>
            <div class="main-playground-board-field-game-options">
                <button type="submit" class="game-options-threefold-draw btn btn-primary" disabled><i class="fas fa-equals"></i> Declare 3F Draw</button>
                <button type="submit" class="game-options-offer-draw btn btn-primary"><i class="far fa-handshake"></i> Offer Draw</button>
                <button type="submit" class="game-options-resign btn btn-primary"><i class="far fa-flag"></i> Resign</button>
            </div>
        </div>

        <div class="main-playground-black player-stats column right">
            <h1 class="main-playground-black-name player-name"><i class="fas fa-user fa-sm"></i> </h1>
            <div class="main-playground-black-points player-points"><span class="black-points-value player-points-value">0</span> pts</div>
            <div class="main-playground-black-taken-pieces taken-pieces-container">
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/wP.png" alt="Pawn: " />
                    <span class="taken-pieces-white-pawn-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/wN.png" alt="Knight: " />
                    <span class="taken-pieces-white-knight-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/wB.png" alt="Bishop: " />
                    <span class="taken-pieces-white-bishop-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/wR.png" alt="Rook: " />
                    <span class="taken-pieces-white-rook-value">0</span>
                </div>
                <div class="taken-pieces">
                    <img src="~/img/chesspieces/wikipedia/wQ.png" alt="Queen: " />
                    <span class="taken-pieces-white-queen-value">0</span>
                </div>
            </div>
            <div>
                <ul class="main-playground-black-move-history player-move-history list-group"></ul>
            </div>
        </div>
    </div>

    <div id="find-opponent" class="row m-5 find-box">
        <div class="mx-auto my-auto text-center">
            <p id="label" class="row help-block m-3 text-center">Enter your game nickname:</p>
            <div class="form-inline">
                <div class="form-group mr-2" id="username-group">
                    <label class="sr-only control-label" for="username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Your name" autofocus />
                </div>
                <button type="submit" id="find-game" class="btn btn-primary">Find Game</button>
                <p id="hidden" class="help-block" style="visibility:hidden"></p>
            </div>
        </div>
    </div>
</main>

<environment names="Development">
    <script type="text/javascript" src="~/js/game.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script type="text/javascript" src="~/js/game.min.js" asp-append-version="true"></script>
</environment>
